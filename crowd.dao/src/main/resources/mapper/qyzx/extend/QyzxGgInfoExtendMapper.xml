  			LEFT JOIN t_advert_yhjbxx_company on t_advert_yhjbxx_company.wid=t_advert_qyzx_gg.yhid
  		</if>
  		LEFT JOIN t_advert_sjzd_sjgl_shzt ON t_advert_sjzd_sjgl_shzt.LBDM=t_advert_qyzx_gg.SHZT
  		<where>
